<div class="login-container">
<h1>Log In</h1>
<%= form_for :login do |f| %>
  <div>
    <div>
      <%= f.label :email %>
    </div>
    <div>
      <%= f.text_field :email, autofocus: true %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="sign-up-button">
    <%= f.submit "Log In" %>
  </div>
<% end %>
</div>